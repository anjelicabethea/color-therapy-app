<!doctype html>
<html>
<head>
  <title>Color Therapy</title>
  <link rel="stylesheet" href="style.css">

</head>
<body>
  <div class="messages grid-container">
    <!-- //embeded javascript tempates
    //loops through message array -->
    <% for(var i=0; i< messages.length; i++) {%>
      <!-- //for every message put inside this -->
      <div class="message">
        <span><%= messages[i].msg.userName%></span>
        <span><%= messages[i].msg.msg %></span>

        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </div>
      <!-- closes the loop, makes a div everytime it iterates -->
      <% } %>
    </div>
    <form class="post" method="post">
      <input id="msg" type="text" name="chat" value="" placeholder="">
      <span id="uName" data-name="<%= uName%>"></span>
      <span id="uId"data-id="<%=uId%>"></span>
      <span id="color"  data-color="<%=color%>"></span>
      <button id="chatSubmit"type="button" name="button">submit</button>
    </form>
    <script src="/chat.js"></script>
  </body>
  </html>
