<body>


	<div class="container-login100" style="background-image: url('img/profile.png');">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
			<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>
				<form class="login100-form validate-form" action="/signup" method="post">
					<!-- <span class="login100-form-title p-b-37">
					Sign In
				</span> -->
				<div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">

					<input class="input100 form-control" type="text" name="firstName" placeholder="firstname">
					<!-- <input type="text" class="form-control" name="email"> -->
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">

					<input class="input100 form-control" type="text" name="lastName" placeholder="lastname">
					<!-- <input type="text" class="form-control" name="email"> -->
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20" data-validate="enterUsername ">

					<input class="input100 form-control" type="text" name="userName" placeholder="username">
					<!-- <input type="text" class="form-control" name="email"> -->
					<span class="focus-input100"></span>
				</div>


				<div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
					<input class="input100 form-control" type="text" name="email" placeholder="username or email">
					<!-- <input type="text" class="form-control" name="email"> -->
					<span class="focus-input100"></span>
				</div>

				<div class="wrap-input100 validate-input m-b-25" data-validate = "Enter password">
					<input class="input100 form-control" type="password" name="password" placeholder="password">
					<!-- <input type="password" class="form-control" name="password"> -->
					<span class="focus-input100"></span>
				</div>

				<div class="container-login100-form-btn">
					<button class="login100-form-btn btn btn-warning btn-lg" type="submit">
						Sign up
					</button>
					<p>Need an account? <a href="/signup">Signup</a></p>
					<!-- <button type="submit" class="btn btn-warning btn-lg">Login</button> -->
				</div>

</form>
</div>
